@import "colors"

nav-height = 60px

body
  padding = 10px
  padding: padding
  padding-bottom: padding + nav-height

body > nav
  width: 100%
  height: nav-height
  top: initial
  bottom: 0
  display: -webkit-flex
  display: flex

  > a
    width: auto
    -webkit-flex: 0 0 16.6666666666666%
    flex: 0 0 16.6666666666666%
    border-bottom: none
    border-right: 1px solid accent-hover
    touch-action: manipulation

    &:hover
      width: auto

#this-week
  display: inline-block
  width: initial

  > h1
    text-align: center

  .week-summary
    display: inline-block

  section
    display: block
    padding-right: 30px
    margin-bottom: 20px
    min-width: initial
    max-width: initial

    &:last-child
      margin-bottom: 0

#home
  padding-top: 20px

  > h1
    text-align: center
    margin-bottom: 40px

    > span
      &, .department
        margin-top: 10px
        font-size: 12px
      .department
        margin-top: 5px
        display: block

  p
    label-width = 145px
    span
      display: inline-block
      width: "calc(100% - %s)" % label-width

    strong
      width: label-width

#textbooks
  img
    max-width: 22%
    width: auto
    height: auto
    margin-right: 5px

#lectures > section
  > h1
    font-size: 24px

  .date
    display: inline-block

  .topics, .references
    padding-right: 0

  > section
    display: block

    &:not(:last-child)
      margin-bottom: 20px
      border-bottom: 2px solid gray

    > div
      display: block
      margin-bottom: 25px
      padding-top: 0

      &:first-of-type
        padding-left: 0
        margin-bottom: 15px

        h1
          margin-bottom: 0
          font-size: 18px

    .references, .slides
      h1
        padding-left: 20px

    .icon
      &.references, &.slides
        &::before
          top: 0
          left: 0

          margin-top: -6px

          font-size: 14px

#assignments .homework
  strong
    display: inline-block

  .deadline, .files
    width: auto

  .module > *
    display: block
    padding-bottom: 10px

  .files > *
    margin-right: 10px
